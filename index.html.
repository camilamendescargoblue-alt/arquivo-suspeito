<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Projeto Interativo</title>
  <style>
    body {
      background-color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      font-family: Arial, sans-serif;
      text-align: center;
    }

    button {
      padding: 10px 20px;
      font-size: 18px;
      margin: 10px;
      cursor: pointer;
      position: relative;
      transition: all 0.2s;
    }

    #theRock {
      display: none;
      width: 300px;
      margin-top: 20px;
    }

    #finalMessage {
      display: none;
      font-size: 24px;
      font-weight: bold;
      color: red;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <h1>Você é gay?</h1>
  <div>
    <button id="yesBtn">Sim</button>
    <button id="noBtn">Não</button>
  </div>

  <img id="theRock" src="d6cdc88a-48c7-4ea0-b382-c0102a91e2f3.png" alt="The Rock">
  <div id="finalMessage">PUTA QUE PARIU!!!</div>

  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const theRock = document.getElementById('theRock');
    const finalMessage = document.getElementById('finalMessage');

    // Função para mover o botão "Não"
    noBtn.addEventListener('mouseover', () => {
      const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
      const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);
      noBtn.style.position = 'absolute';
      noBtn.style.left = `${x}px`;
      noBtn.style.top = `${y}px`;
    });

    // Função do botão "Sim"
    yesBtn.addEventListener('click', () => {
      theRock.style.display = 'block';

      setTimeout(() => {
        finalMessage.style.display = 'block';
      }, 500); // Aparece a frase após meio segundo
    });

    // Mostrar a imagem ao tentar clicar "Sim"
    yesBtn.addEventListener('mouseover', () => {
      theRock.style.display = 'block';
    });
  </script>

</body>
</html>
